{
  "name": "universal-web-bypass-injector",
  "version": "1.0.0",
  "description": "Universal ad-blocker and paywall bypass extension that removes tracking scripts, overlays, and paywalls from websites.",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm run lint && npm run test",
    "validate": "npm run lint && npm run test && npm run test:extension"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "*.js",
      "!tests/**",
      "!node_modules/**"
    ]
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "browser": true,
      "webextensions": true,
      "jest": true
    },
    "globals": {
      "chrome": "readonly",
      "UniversalBypass": "readonly"
    },
    "rules": {
      "no-console": "off",
      "space-before-function-paren": ["error", "never"]
    }
  },
  "keywords": [
    "chrome-extension",
    "ad-blocker",
    "paywall-bypass",
    "privacy",
    "tracker-blocker"
  ],
  "author": "Chauhan-Mukesh",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Chauhan-Mukesh/Universal-Web-Bypass-Injector"
  }
}